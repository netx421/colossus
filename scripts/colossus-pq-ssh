#!/usr/bin/env bash
# COLOSSUS â€” post-quantum-leaning SSH wrapper to Telehack

USER_NAME="$1"

if [ -z "$USER_NAME" ]; then
  echo "Usage: login <username>"
  exit 1
fi

exec ssh \
  -p 2222 \
  -o KexAlgorithms=+mlkem768x25519-sha256,sntrup761x25519-sha512 \
  -o HostKeyAlgorithms=+ssh-ed25519 \
  -o PubkeyAcceptedAlgorithms=+ssh-ed25519 \
  -o Ciphers=+chacha20-poly1305@openssh.com \
  "${USER_NAME}@telehack.com"
